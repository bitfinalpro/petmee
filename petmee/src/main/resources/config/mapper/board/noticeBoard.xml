<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.petmee.repository.dao.BoardDAO1">

	<select id="selectBoardCount" resultType="int">
		select count(*)
		from tb_board
	</select>
	
	<select id="selectBoard" parameterType="Page" resultType="board">
		select *
		from tb_board
		order by topChk desc, no desc
		limit #{begin}, 10
	</select>

	<select id="selectOneBoard" parameterType="int" resultType="board">
		select *
		from tb_board
		where no = #{no}
	</select>

	<update id="updateViewCnt" parameterType="int">
		update tb_board
		set viewCnt = viewCnt + 1
		where no = #{no}
	</update>

	<insert id="insertBoard" parameterType="board">
		insert into
		tb_board(
		title, email, content, topChk
		) values (
		#{title}, #{email}, #{content}, #{topChk}
		)
	</insert>
	<!-- <insert id="insertBoard" parameterType="board"> insert into notice_board( 
		title, email, content, topChk ) select #{title}, #{email}, #{content}, 
		#{topChk} from notice_board where ( (#{topChk} = 1 and no = 0) or (#{topChk} 
		= 0 and no) ) </insert> -->

	<update id="updateBoard" parameterType="board">
		update tb_board
		set title = #{title},
		content = #{content}
		where no = #{no}
	</update>

	<delete id="deleteBoard" parameterType="int">
		delete
		from tb_board
		where no = #{no}
	</delete>

</mapper>
