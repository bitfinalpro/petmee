<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.petmee.repository.dao.FreeBoardDAO">

<!-- 리스트 , 페이징 -->
	<select id="selectBoard" resultType="FreeBoard" parameterType="Page">
	   select *
	     from tb_board
	    order by no desc
	     limit #{begin}, 10
	</select>
	<select id="selectBoardCount" resultType="int">
	select count(*)
		from tb_board
	</select>
<!-- 글 상세 조회 -->
	<select id="selectOneBoard" parameterType="int" resultType="FreeBoard">
		select *
		  from tb_board
		 where no = #{no} 
	</select>
<!-- 게시글 등록 -->
	<insert id="insertBoard" parameterType="FreeBoard">
		insert into tb_board (
			 title, writer, content
		) values (
			 #{title}, #{writer}, #{content}
		)
	</insert>
<!--  조회 수 -->	
	<update id="updateViewCnt" parameterType="int">
		update tb_board 
		   set view_cnt = view_cnt + 1
		 where no = #{no}
	</update>
<!--  글 수정 -->	
	<update id="updateBoard" parameterType="FreeBoard">
		update tb_board 
		   set title = #{title},
		       writer = #{writer}, 
		       content = #{content}
		 where no = #{no}
	</update>
<!--  글삭제 -->
	<delete id="deleteBoard" parameterType="int">
		delete 
		  from tb_board 
		 where no = #{no}
	</delete>
</mapper>






















