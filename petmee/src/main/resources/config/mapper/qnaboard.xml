<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.petmee.repository.dao.QnaBoardDAO">

<!-- 리스트 , 페이징 -->
	<select id="selectQnaBoard" resultType="QnaBoard" parameterType="Page" flushCache="true" useCache="true">
	   select *
	     from tb_qna
	    order by qna_no desc
	     limit #{begin}, 10
	</select>
	<select id="selectQnaCount" resultType="int">
	select count(*)
		from tb_qna
	</select>
<!-- 글 상세 조회 -->
	<select id="selectOneBoard" parameterType="int" resultType="QnaBoard">
		select *
		  from tb_qna
		 where qna_no = #{no} 
	</select>
<!-- 게시글 등록 -->
	<insert id="insertQnaBoard" parameterType="QnaBoard">
		insert into tb_qna (
			 qna_title, qna_writer, qna_content
		) values (
			 #{title}, #{writer}, #{content}
		)
	</insert>
<!--  조회 수 -->	
	<update id="updateViewCnt" parameterType="int">
		update tb_qna 
		   set viewCnt = viewCnt + 1
		 where qna_no = #{no}
	</update>
<!--  글 수정 -->	
	<update id="updateQnaBoard" parameterType="QnaBoard">
		update tb_qna
		   set qna_title = #{title},
		       qna_writer = #{writer}, 
		       qna_content = #{content}
		 where qna_no = #{no}
	</update>
<!--  글삭제 -->
	<delete id="deleteQnaBoard" parameterType="int">
		delete 
		  from tb_qna 
		 where qna_no = #{no}
	</delete>
</mapper>






















